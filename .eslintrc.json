{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "mocha"
  ],
  "extends": [
    "plugin:mocha/recommended",
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "func-names": "off",
    "quotes": ["error", "double"],
    "semi": "error",
    "mocha/no-setup-in-describe": "off",
    "prefer-arrow-callback": "off",
    "no-console": "warn",
    "import/prefer-default-export": "off"
  }
}
